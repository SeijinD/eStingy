<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white2"
    tools:context=".Fragment.F_Query_All_Sales_Per_Product">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:text="All Sales Per Product"
        android:layout_margin="24dp"
        android:textStyle="bold"
        android:textSize="18dp"/>

    <Spinner
        android:id="@+id/product_id_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_toRightOf="@id/product_id_title"/>

    <TextView
        android:id="@+id/product_id_title"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:layout_margin="24dp"
        android:text="Selected Id"
        android:textStyle="bold"
        android:textSize="18dp"/>

    <Button
        android:id="@+id/query_run"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Run"
        android:textSize="18dp"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txt_query_all_sales_per_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Query Result"
                android:layout_margin="24dp"
                android:textStyle="bold"
                android:textSize="18dp"/>

        </ScrollView>

    </LinearLayout>

</LinearLayout>